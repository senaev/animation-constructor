.ColorField__preview {
    position: relative;
    top: 3px;

    display: inline-block;

    border: 1px solid #555555;
    border-radius: 4px;

    width: 18px;
    height: 18px;

    background-image: svg-load('../../assets/like-transparent.svg');
    background-size: 16px;

    &_filler {
        width: 100%;
        height: 100%;
    }
}
