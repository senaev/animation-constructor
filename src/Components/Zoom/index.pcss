:root {
  --padding: 10px;
  --buttonSize: 30px;
}

.Zoom {
  top: 10px;
  right: 10px;
  width: var(--buttonSize);
  height: calc(var(--buttonSize) * 2);
  composes: menu from '../mixins/menu.pcss';

  &__button {
    position: absolute;
    width: var(--buttonSize) !important;
    height: var(--buttonSize) !important;

    &_zoomOut {
      top: var(--buttonSize);
    }
  }
}
