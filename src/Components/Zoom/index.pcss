:root {
  --padding: 10px;
  --buttonSize: 30px;
}

.Zoom {    top: 10px;
  right: 10px;
  background-color: rgba(255, 255, 255, 0.8);
  width: var(--buttonSize);
  height: calc(var(--buttonSize) * 2);
  border-radius: 8px;
  border: 1px solid rgba(0, 0, 0, 0.8);

  &__button {
    position: absolute;
    width: var(--buttonSize) !important;
    height: var(--buttonSize) !important;

    &_zoomOut {
      top: var(--buttonSize);
    }
  }
}
