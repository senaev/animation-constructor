.TimeLinePoint {
    position: absolute;
    top: 0;
    left: 0;
    width: 0;
    height: 100%;

    &__pointer {
        position: absolute;
        top: 0;
        height: 100%;
        width: 2px;
        left: -1px;
        background-color: rgba(0,0,0,0.5);
        pointer-events: none;
    }

    &__hoverZone {
        position: absolute;
        top: 0;
        left: -4px;
        width: 8px;
        height: 100%;
    }
}
